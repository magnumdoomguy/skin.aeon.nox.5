				<posx>1482</posx>
				<posy>940</posy>
				<width>356</width>
				<height>120</height>
				<aspectratio align="right">keep</aspectratio>
				<texture>aeon-nox-logo.png</texture>
			</control>
			
			<!-- Plex Logo -->
			<control type="image">
				<description>LOGO</description>
				<posx>130</posx>
				<posy>878</posy>
				<width>135</width>
				<aspectratio align="left">keep</aspectratio>
				<texture>plex-logo-light-small.png</texture>
			</control>
			
			<!-- Display "Select your PLEX user profile[CR]to login and continue" -->
			<control type="label">
				<posx>442</posx>
				<posy>150</posy>
				<width>1035</width>
				<height>60</height>
				<font>font15</font>
				<textcolor>grey2</textcolor>
				<align>center</align>
				<aligny>center</aligny>
				<label>$LOCALIZE[31421]</label>
			</control>
			
			<control type="image">
				<posy>5</posy>
				<posx>5</posx>
				<width>140</width>
				<height>140</height>
				<aspectratio scalediffuse="false" align="center">scale</aspectratio>
				<texture diffuse="round-big.png">$INFO[ListItem.Art(thumb)]</texture>
			</control>
		</control>
