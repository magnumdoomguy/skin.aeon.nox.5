              <include>MediaFlagVars</include>
              <texture fallback="flags/colour/135x90/video/default.png">$VAR[VideoCodecFlag_135x90]</texture>
            </control>
            <!-- Content Rating -->
            <control type="image">
              <posx>0</posx>
              <include>MediaFlagVars</include>
