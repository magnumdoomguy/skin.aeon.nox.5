                <label>$LOCALIZE[31139]</label>
                <font>font13</font>
                <textcolor>grey</textcolor>
              </control>
            </control>
            <control type="group">
              <visible>Container.Content(tvshows)</visible>
              <control type="label">
                <posx>143</posx>
                <posy>0</posy>
