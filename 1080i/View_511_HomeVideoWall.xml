<?xml version="1.0" encoding="UTF-8"?>
<includes>

	<!-- Home Video Wall -->
	<include name="HomeVideoWall">
		<control type="group">
			<visible>Control.IsVisible(511) + !Window.IsActive(addoninformation)</visible>
			<include>ViewAnimation</include>
			<posy>-85</posy>
			<control type="image">
				<description>background image</description>
				<posx>90</posx>
				<posy>1080</posy>
				<width>1740</width>
				<height>964</height>
				<texture border="40">panel_reflect.png</texture>
			</control>
			<control type="image">
				<description>background image</description>
				<posx>90</posx>
				<posy>148</posy>
				<width>1740</width>
				<height>964</height>
				<texture border="40">listpanel_back.png</texture>
			</control>
			<control type="panel" id="511">
				<posx>120</posx>
				<posy>179</posy>
				<width>1680</width>
				<height>900</height>
				<onleft>SetProperty(MediaMenu,True,home)</onleft>
				<onleft>SetFocus(9050)</onleft>
				<onright>60</onright>
				<onup>501</onup>
				<ondown>501</ondown>
				<pagecontrol>60</pagecontrol>
				<preloaditems>2</preloaditems>
				<scrolltime tween="quadratic" easing="out">300</scrolltime>
				<visible>Container.PlexContent(homemovies) + !Container.Content(empty)</visible>
				<itemlayout height="300" width="560">
					<control type="image">
						<width>560</width>
						<height>300</height>
						<aspectratio>scale</aspectratio>
						<texture background="true">$INFO[ListItem.Art(bigThumb)]</texture>
						<fadetime>400</fadetime>
						<bordertexture border="2">thumbs/panel_border3.png</bordertexture>
						<bordersize>2</bordersize>
					</control>
					<control type="image">
						<posy>250</posy>
						<width>560</width>
						<height>50</height>
						<texture>black.png</texture>
						<bordersize>2</bordersize>
						<colordiffuse>88ffffff</colordiffuse>
					</control>
					<control type="label">
						<posy>260</posy>
						<width>560</width>
						<height>30</height>
						<textoffsetx>15</textoffsetx>
						<textcolor>grey2</textcolor>
						<info>ListItem.Label</info>
					</control>
					<control type="label">
						<posx>560</posx>
						<posy>260</posy>
						<width>560</width>
						<height>30</height>
						<align>right</align>
						<textoffsetx>15</textoffsetx>
						<textcolor>grey2</textcolor>
						<info>ListItem.DurationStr</info>
					</control>
				</itemlayout>
				<focusedlayout heigth="300" width="560">
					<control type="image">
						<width>560</width>
						<height>300</height>
						<aspectratio>scale</aspectratio>
						<texture background="true">$INFO[ListItem.Art(bigThumb)]</texture>
						<fadetime>400</fadetime>
						<bordertexture border="8">thumbs/thumbnail_focused.png</bordertexture>
						<bordersize>8</bordersize>
						<animation type="Focus">
							<effect type="zoom" start="95" end="100" time="200" tween="sine" easing="inout" center="auto" />
							<effect type="fade" start="80" end="100" time="200" tween="sine" easing="in" />
						</animation>
					</control>
					<control type="group">
						<animation type="Focus">
							<effect type="zoom" start="96" end="98" time="200" tween="sine" easing="inout" center="auto" />
							<effect type="fade" start="80" end="100" time="200" tween="sine" easing="in" />
						</animation>
						<control type="image">
							<posy>250</posy>
							<width>560</width>
							<height>50</height>
							<texture>black.png</texture>
							<bordersize>2</bordersize>
							<colordiffuse>88ffffff</colordiffuse>
						</control>
						<control type="label">
							<posy>260</posy>
							<width>560</width>
							<height>30</height>
							<textoffsetx>15</textoffsetx>
							<textcolor>grey2</textcolor>
							<info>ListItem.Label</info>
						</control>
						<control type="label">
							<posx>560</posx>
							<posy>260</posy>
							<width>560</width>
							<height>30</height>
							<align>right</align>
							<textoffsetx>15</textoffsetx>
							<textcolor>grey2</textcolor>
							<info>ListItem.DurationStr</info>
						</control>
					</control>
				</focusedlayout>
			</control>
			<control type="scrollbar" id="60">
				<posx>1797</posx>
				<posy>179</posy>
				<width>14</width>
				<height>720</height>
				<colordiffuse>55ffffff</colordiffuse>
				<onleft>50</onleft>
				<onright>SetProperty(MediaMenu,True,home)</onright>
				<onright>SetFocus(9050)</onright>
				<ondown>60</ondown>
				<onup>60</onup>
				<showonepage>false</showonepage>
				<texturesliderbackground>-</texturesliderbackground>
				<texturesliderbar border="1">scrollbar/texturesliderbar2.png</texturesliderbar>
				<texturesliderbarfocus border="1">scrollbar/texturesliderbar2.png</texturesliderbarfocus>
				<animation effect="fade" start="100" end="0" time="500" delay="500" condition="!Control.HasFocus(60) + !Container.Scrolling">Conditional</animation>
			</control>
		</control>
	</include>

</includes>