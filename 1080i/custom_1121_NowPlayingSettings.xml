<?xml version="1.0" encoding="UTF-8"?>
<window id="1121" type="dialog">
    <defaultcontrol always="true">90200</defaultcontrol>
	<visible>Window.IsActive(50) + Window.IsActive(1121)</visible>
	<onunload>SetFocus(706)</onunload>
    <coordinates>
		<system>1</system>
		<posx>360</posx>
		<posy>179</posy>
	</coordinates>
    <include>dialogeffect</include>
    <controls>
		<control type="group">
			<visible>!Window.IsActive(1123)</visible>
        <control type="image">
            <description>background image</description>
            <posx>0</posx>
			<posy>0</posy>
			<width>1200</width>
			<height>722</height>
            <texture border="40">dialogs/default/bg.png</texture>
        </control>
        <control type="label" id="2">
            <description>header label</description>
            <posx>30</posx>
			<posy>32</posy>
			<width>1140</width>
			<height>40</height>
            <font>font15_title</font>
            <label>42142</label>
            <align>center</align>
            <textcolor>dialogheader</textcolor>
        </control>
        <control type="image">
            <posx>32</posx>
			<posy>88</posy>
			<width>1136</width>
			<height>600</height>
            <texture border="5">dialogs/default/inner.png</texture>
        </control>
        <control type="grouplist" id="90200">
            <description>control area</description>
            <posx>32</posx>
			<posy>88</posy>
			<width>1136</width>
			<height>600</height>
            <itemgap>0</itemgap>
            <pagecontrol>6</pagecontrol>
            <onup>90200</onup>
            <ondown>90200</ondown>
            <onleft>noop</onleft>
            <onright>noop</onright>
			
			<!-- Default OSD Button -->
			<control type="button" id="90201">
                <posx>0</posx>
				<posy>0</posy>
				<height>75</height>
				<width>1136</width>
                <label>$LOCALIZE[42146]</label> <!-- STRING: Default 'Now Playing' Button -->
                <label2>[COLOR labelheader]$VAR[NowPlayingDefaultButtonLabelVar][/COLOR]</label2>
                <onclick>$VAR[DefaultNowPlayingButtonSetting]</onclick>
            </control>
					
			<!-- Background Settings -->
			<control type="button" id="90202">
				<description>Toggle Background</description>
				<width>1138</width>
				<label>$LOCALIZE[42012]</label> <!-- STRING: Set Background -->
				<onclick>ActivateWindow(1123)</onclick>
			</control>
			
			<!-- Poster Style -->
			<control type="button" id="90203">
                <posx>0</posx>
				<posy>0</posy>
				<height>75</height>
				<width>1136</width>
                <label>$LOCALIZE[42124]</label>
                <label2>[COLOR labelheader]$VAR[NowPlayingIconLabelVar][/COLOR]</label2>
                <onclick>$VAR[NowPlayingIconSettingVar]</onclick>
            </control>
			
			<!-- Spinning Disc -->
			<control type="button" id="90204">
                <posx>0</posx>
				<posy>0</posy>
				<height>75</height>
				<width>1136</width>
                <label>$LOCALIZE[42122]</label> <!-- STRING: Spinning Disc -->
                <label2>[COLOR labelheader]$VAR[MusicSpinningDiscLabelVar][/COLOR]</label2>
                <onclick>$VAR[MusicSpinningDiscSettingVar]</onclick>
				<enable>!StringCompare(Skin.String(NowPlaying.IconStyle),Disabled)</enable>
            </control>
			
			<!-- Large Scrolling Info -->
            <control type="radiobutton" id="90205">
                <description>Big Ass Label Button</description>
                <width>1138</width>
                <label>$LOCALIZE[31042]</label> <!-- STRING: Show "Now Playing" information blended in the background -->
                <onclick>Skin.ToggleSetting(BigAssLabel)</onclick>
                <selected>Skin.HasSetting(BigAssLabel)</selected>
            </control>
			
			<!-- Disable Next Up Scrolling Text -->
            <control type="radiobutton" id="90206">
                <description>Disable Next Up Scrolling Text</description>
                <width>1138</width>
                <label>$LOCALIZE[42145]</label> <!-- STRING: Enable "Up Next" Scrolling Text -->
                <onclick>Skin.ToggleSetting(NowPlaying.DisableNextUpScrollbar)</onclick>
                <selected>!Skin.HasSetting(NowPlaying.DisableNextUpScrollbar)</selected>
            </control>
			
			<!-- Disable Codec Flag and Info -->
            <control type="radiobutton" id="90207">
                <description>Disable Codec Flag and Info</description>
                <width>1138</width>
                <label>$LOCALIZE[42150]</label> <!-- STRING: Enable Codec Flag -->
                <onclick>Skin.ToggleSetting(Music.DisableCodecFlag)</onclick>
                <selected>!Skin.HasSetting(Music.DisableCodecFlag)</selected>
            </control>
			
			<!-- Reset -->
            <control type="button" id="90208">
            	<width>1138</width>
                <label>$LOCALIZE[42153]</label> <!-- STRING: Reset All "Now Playing" Settings to Default -->
                <onclick>ActivateWindow(1117)</onclick>
				<enable>!IsEmpty(Skin.String(NowPlaying.DefaultButton)) | !IsEmpty(Skin.String(NowPlaying.CustomBackgroundFile)) | !IsEmpty(Skin.String(NowPlaying.CustomSlideshowPath)) | !IsEmpty(Skin.String(NowPlaying.IconStyle)) | !IsEmpty(Skin.String(Music.SpinningDiscStyle)) | Skin.HasSetting(BigAssLabel) | Skin.HasSetting(NowPlaying.DisableNextUpScrollbar) | Skin.HasSetting(Music.DisableCodecFlag)</enable>
				<!--<enable>!IsEmpty(Skin.String(NowPlaying.DefaultButton)) | Skin.HasSetting(NowPlaying.CustomBackground) | Skin.HasSetting(NowPlaying.CustomSlideshow) | !IsEmpty(Skin.String(NowPlaying.IconStyle)) | !IsEmpty(Skin.String(Music.SpinningDiscStyle)) | Skin.HasSetting(BigAssLabel) | Skin.HasSetting(NowPlaying.DisableNextUpScrollbar) | Skin.HasSetting(Music.DisableCodecFlag)</enable>-->
            </control>
        </control>
		
		<!-- Scrollbar -->
        <control type="scrollbar" id="6">
            <posx>1166</posx>
			<posy>88</posy>
			<width>14</width>
			<height>600</height>
			<colordiffuse>55ffffff</colordiffuse>
            <texturesliderbackground>-</texturesliderbackground>
            <texturesliderbar border="1">scrollbar/texturesliderbar2.png</texturesliderbar>
            <texturesliderbarfocus border="1">scrollbar/texturesliderbar2.png</texturesliderbarfocus>
            <onleft>noop</onleft>
            <onright>noop</onright>
            <showonepage>false</showonepage>
            <orientation>vertical</orientation>
        </control>
        </control>
    </controls>
</window>
