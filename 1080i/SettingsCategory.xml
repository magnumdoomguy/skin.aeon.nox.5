<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol>3</defaultcontrol>
    <allowoverlay>no</allowoverlay>
    <controls>
	
        <!-- NOWALL Appearance Background -->
        <control type="image">
            <include>FullscreenDimensions</include>
            <texture>special://skin/backgrounds/appearance.jpg</texture>
            <visible>Window.IsActive(appearancesettings)</visible>
        </control>
		
        <!-- NOWALL Playback Background -->
        <control type="image">
            <include>FullscreenDimensions</include>
            <texture>special://skin/backgrounds/play_disc.jpg</texture>
            <visible>Window.IsActive(videossettings)</visible>
        </control>
		
        <!-- NOWALL System Background -->
        <control type="image">
            <include>FullscreenDimensions</include>
            <texture>special://skin/backgrounds/default_settings.jpg</texture>
            <visible>Window.IsActive(SystemSettings)</visible>
        </control>
		
        <!-- NOWALL Network Background -->
        <control type="image">
            <include>FullscreenDimensions</include>
            <texture>special://skin/backgrounds/network.jpg</texture>
            <visible>Window.IsActive(ServiceSettings)</visible>
        </control>
		
        <!-- Visualization Background -->
        <control type="visualisation">
            <include>FullscreenDimensions</include>
            <visible>Player.HasAudio + !Skin.HasSetting(Disable.ShowBackgroundVis)</visible>
            <visible>!SubString(Window(videolibrary).Property(TvTunesIsAlive),True)</visible>
        </control>
		
        <!-- Video Background -->
        <control type="image">
            <include>FullscreenDimensions</include>
            <texture>black.png</texture>
            <visible>Player.HasVideo + !Skin.HasSetting(Disable.ShowBackgroundVideo)</visible>
        </control>
        <control type="videowindow">
            <include>FullscreenDimensions</include>
            <visible>Player.HasVideo + !Skin.HasSetting(Disable.ShowBackgroundVideo)</visible>
        </control>
		
        <control type="group">
            <posx>0</posx>
            <posy>128</posy>
            <include>Window_OpenClose_Animation</include>
            <include>SystemLeftPanel</include>
            <control type="grouplist" id="3">
                <description>button area</description>
                <posx>82</posx>
                <posy>32</posy>
                <width>356</width>
                <height>840</height>
                <itemgap>0</itemgap>
                <onleft>9000</onleft>
                <onright>5</onright>
                <onup>3</onup>
                <ondown>3</ondown>
            </control>
			
            <!-- Item Separator -->
            <control type="image">
                <description>separator image</description>
                <posx>82</posx>
                <posy>692</posy>
                <width>356</width>
                <height>60</height>
                <texture border="1">separator2.png</texture>
                <visible>!Container(3).HasNext</visible>
            </control>
			
            <include>SystemRightPanel</include>
			
            <!-- Item Separator -->
            <control type="image">
                <description>separator image</description>
                <posx>522</posx>
                <posy>692</posy>
                <width>1316</width>
                <height>60</height>
                <texture border="1">separator2.png</texture>
                <visible>!Container(5).HasNext</visible>
            </control>
			
            <!-- Description Area -->
            <control type="textbox" id="6">
                <description>description area</description>
                <posx>552</posx>
                <posy>754</posy>
                <width>1256</width>
                <height>115</height>
                <font>font15_textbox</font>
                <align>left</align>
                <textcolor>grey2</textcolor>
                <autoscroll time="3000" delay="4000" repeat="5000">true</autoscroll>
                <animation effect="fade" start="0" end="100" time="300" tween="sine" easing="inout">Visible</animation>
                <animation effect="fade" start="100" end="0" time="0" tween="sine" easing="inout">Hidden</animation>
            </control>
			
            <!-- Control Area -->
            <control type="grouplist" id="5">
                <description>control area</description>
                <posx>522</posx>
                <posy>32</posy>
                <width>1316</width>
                <height>720</height>
                <itemgap>0</itemgap>
                <pagecontrol>60</pagecontrol>
                <onleft>3</onleft>
                <onright>60</onright>
                <onup>5</onup>
                <ondown>5</ondown>
            </control>
			
            <!-- Display Scrollbar -->
            <control type="scrollbar" id="60">
                <posx>1838</posx>
                <posy>32</posy>
                <width>14</width>
                <height>720</height>
				<colordiffuse>55ffffff</colordiffuse>
                <onleft>5</onleft>
                <onright>3</onright>
                <ondown>60</ondown>
                <onup>60</onup>
                <showonepage>false</showonepage>
                <texturesliderbackground>-</texturesliderbackground>
                <texturesliderbar border="1">scrollbar/texturesliderbar2.png</texturesliderbar>
                <texturesliderbarfocus border="1">scrollbar/texturesliderbar2.png</texturesliderbarfocus>
            </control>
			
            <!-- Display Aeon Nox Logo -->
            <control type="image">
                <description>LOGO</description>
                <posx>82</posx>
                <posy>752</posy>
                <width>356</width>
                <height>120</height>
                <aspectratio>keep</aspectratio>
                <texture>aeon-nox-logo.png</texture>
            </control>
        </control>
        <control type="button" id="10">
            <description>Default Category Button</description>
            <height>90</height>
            <width>356</width>
            <textoffsetx>15</textoffsetx>
            <align>right</align>
            <aligny>center</aligny>
            <font>font15</font>
            <textcolor>grey2</textcolor>
            <focusedcolor>white</focusedcolor>
            <texturefocus border="3">listselect_fo.png</texturefocus>
            <texturenofocus border="1">separator5.png</texturenofocus>
        </control>
        <control type="button" id="7">
            <description>Default Button</description>
            <posx>0</posx>
            <posy>0</posy>
            <width>1136</width>
            <height>90</height>
            <font>font15</font>
            <textcolor>grey2</textcolor>
            <textoffsetx>30</textoffsetx>
            <focusedcolor>white</focusedcolor>
            <texturefocus border="3">listselect_fo.png</texturefocus>
            <texturenofocus border="1">separator5.png</texturenofocus>
        </control>
        <control type="radiobutton" id="8">
            <description>Default RadioButton</description>
            <posx>0</posx>
            <posy>0</posy>
            <width>1316</width>
            <height>90</height>
            <font>font15</font>
            <textcolor>grey2</textcolor>
            <textoffsetx>30</textoffsetx>
            <focusedcolor>white</focusedcolor>
            <texturefocus border="3">listselect_fo.png</texturefocus>
            <texturenofocus border="1">separator5.png</texturenofocus>
        </control>
        <control type="spincontrolex" id="9">
            <description>Default SpinControlex</description>
            <posx>0</posx>
            <posy>0</posy>
            <width>1316</width>
            <height>90</height>
            <font>font15</font>
            <textcolor>grey2</textcolor>
            <textoffsetx>30</textoffsetx>
            <focusedcolor>white</focusedcolor>
            <texturefocus border="3">listselect_fo.png</texturefocus>
            <texturenofocus border="1">separator5.png</texturenofocus>
            <aligny>center</aligny>
            <reverse>yes</reverse>
            <spinposx>10</spinposx>
        </control>
        <control type="label" id="2">
            <description>Fake Label so we can pass it value down to the one below</description>
            <posx>0</posx>
            <posy>0</posy>
            <width>0</width>
            <height>0</height>
            <font>-</font>
            <visible>false</visible>
        </control>
        <include>Topbar</include>
    </controls>
</window>
