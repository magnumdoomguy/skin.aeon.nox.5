<?xml version="1.0" encoding="UTF-8"?>
<includes>
	
	<!-- Hack to Allow the Number 4 to be Displayed in the Watched Status Indicator Settings without being Localized -->
	<variable name="TVSample1Var">
		<value>4</value>
	</variable>
	
	<!-- Small Plot Setting Label -->
	<variable name="SettingSmallPlotLabelVar">
		<value condition="!Skin.HasSetting(General.SmallPlotText)">$LOCALIZE[31390]</value> <!-- STRING: Skin default -->
		<value condition="Skin.HasSetting(General.SmallPlotText)">$LOCALIZE[1438]</value> <!-- STRING: Small -->
	</variable>
	
	<!-- On Deck Movie Icon Type -->
	<variable name="OnDeckMovieIconTypeSettingVar">
		<value condition="IsEmpty(Skin.String(OnDeck.MovieIconType))">Skin.SetString(OnDeck.MovieIconType,Clear)</value>
        <value condition="StringCompare(Skin.String(OnDeck.MovieIconType),Clear)">Skin.SetString(OnDeck.MovieIconType,Glass)</value>
        <value condition="StringCompare(Skin.String(OnDeck.MovieIconType),Glass)">Skin.SetString(OnDeck.MovieIconType,DVD/Bluray)</value>
		<value condition="StringCompare(Skin.String(OnDeck.MovieIconType),DVD/Bluray)">Skin.Reset(OnDeck.MovieIconType)</value>
    </variable>
		
	<!-- Label for On Deck Movie Icon Type -->
	<variable name="OnDeckMovieIconTypeLabelVar">
		<value condition="IsEmpty(Skin.String(OnDeck.MovieIconType))">$LOCALIZE[42058]</value> <!-- DEFAULT: Poster -->
		<value condition="StringCompare(Skin.String(OnDeck.MovieIconType),Clear)">$LOCALIZE[192]</value>
		<value condition="StringCompare(Skin.String(OnDeck.MovieIconType),Glass)">$LOCALIZE[42056]</value>
		<value condition="StringCompare(Skin.String(OnDeck.MovieIconType),DVD/Bluray)">$LOCALIZE[42057]</value>
    </variable>
	
	<!-- On Deck TV Icon Type -->
	<variable name="OnDeckTVIconTypeSettingVar">
		<value condition="IsEmpty(Skin.String(OnDeck.TVIconType))">Skin.SetString(OnDeck.TVIconType,Glass)</value>
		<value condition="StringCompare(Skin.String(OnDeck.TVIconType),Glass)">Skin.Reset(OnDeck.TVIconType)</value>
    </variable>
	
	<!-- Label for On Deck TV Icon Type -->
	<variable name="OnDeckTVIconTypeLabelVar">
		<value condition="IsEmpty(Skin.String(OnDeck.TVIconType))">$LOCALIZE[42058]</value> <!-- STRING: Poster -->
        <value>$LOCALIZE[42056]</value> <!-- STRING: Glass -->
    </variable>
	
	<!-- On Deck Music Icon Type -->
	<variable name="OnDeckMusicIconTypeSettingVar">
		<value condition="IsEmpty(Skin.String(OnDeck.MusicIconType))">Skin.SetString(OnDeck.MusicIconType,Glass)</value>
        <value condition="StringCompare(Skin.String(OnDeck.MusicIconType),Glass)">Skin.Reset(OnDeck.MusicIconType)</value>
    </variable>
	
	<!-- Label for On Deck Music Icon Type -->
	<variable name="OnDeckMusicconTypeLabelVar">
		<value condition="IsEmpty(Skin.String(OnDeck.MusicIconType))">$LOCALIZE[42058]</value> <!-- STRING: Poster -->
        <value>$LOCALIZE[42056]</value> <!-- STRING: Glass -->
    </variable>
	
	<!-- On Deck Photo Icon Type -->
	<variable name="WidgetPhotoCases">
		<value condition="IsEmpty(Skin.String(PhotoCaseType))">Skin.SetString(PhotoCaseType,$LOCALIZE[42059])</value>
        <value condition="StringCompare(Skin.String(PhotoCaseType),$LOCALIZE[42059])">Skin.Reset(PhotoCaseType)</value>
    </variable>
	
	<!-- Label for On Deck Photo Icon Type -->
	<variable name="WidgetPhotoCasesLabel">
		<value condition="IsEmpty(Skin.String(PhotoCaseType))">$LOCALIZE[31076]</value>
        <value>$INFO[Skin.String(PhotoCaseType)]</value>
    </variable>

</includes>