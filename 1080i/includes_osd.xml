<?xml version="1.0" encoding="UTF-8"?>
<includes>
	
	<include name="OSD_MediaFlags">
		
		<!-- Resolution Flag -->
		<control type="image">
			<width>140</width>
			<height>95</height>
			<bordersize>2</bordersize>
			<texture>$INFO[VideoPlayer.videoResolution,flags/resolution/,.png]</texture>
			<include>MediaFlagVars</include>
		</control>
			
		<!-- Video Codec Flag -->
		<control type="image">
			<width>140</width>
			<height>95</height>
			<bordersize>2</bordersize>
			<texture>$INFO[VideoPlayer.VideoCodec,flags/video/,.png]</texture>
			<include>MediaFlagVars</include>
		</control>
			
		<!-- Aspect Ratio Flag -->
		<control type="image">
			<width>140</width>
			<height>95</height>
			<bordersize>2</bordersize>
			<texture>$INFO[MusicPlayer.Property(mediaTag-aspectRatio),flags/aspectratio/,.png]</texture>
			<include>MediaFlagVars</include>
		</control>
			
		<!-- Framerate Flag -->
		<control type="image">
			<width>140</width>
			<height>95</height>
			<bordersize>2</bordersize>
			<texture>$INFO[MusicPlayer.Property(mediaTag-videoFrameRate),flags/framerate/,.png]</texture>
			<include>MediaFlagVars</include>
		</control>
			
		<!-- Audio Codec Flag -->
		<control type="image">
			<width>140</width>
			<height>95</height>
			<bordersize>2</bordersize>
			<texture>$INFO[VideoPlayer.AudioCodec,flags/audio/,.png]</texture>
			<include>MediaFlagVars</include>
		</control>
			
		<!-- Audio Channels Flag -->
		<control type="image">
			<width>140</width>
			<height>95</height>
			<bordersize>2</bordersize>
			<texture fallback="flags/mpaa/NR.png">$INFO[VideoPlayer.AudioChannels,flags/channels/,.png]</texture>
			<include>MediaFlagVars</include>
		</control>
			
		<!-- Content Rating Flag -->
		<control type="image">
			<width>140</width>
			<height>95</height>
			<bordersize>2</bordersize>
			<texture fallback="flags/mpaa/NR.png">$INFO[MusicPlayer.Property(mediaTag-contentRating),flags/mpaa/,.png]</texture>
			<include>MediaFlagVars</include>
		</control>
			
		<!-- Studio Flag -->
		<control type="image">
			<width>140</width>
			<height>95</height>
			<bordersize>2</bordersize>
			<texture>$INFO[Skin.String(OSD.Studio),flags/studios/,.png]</texture>
			<include>MediaFlagVars</include>
		</control>
		
	</include>
	
</includes>