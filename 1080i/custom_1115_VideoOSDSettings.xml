<?xml version="1.0" encoding="UTF-8"?>
<window id="1115" type="dialog">
	<defaultcontrol always="true">90200</defaultcontrol>
	<visible>Window.IsActive(FullScreenVideo) + Window.IsActive(1115)</visible>
	<coordinates>
		<system>1</system>
		<posx>360</posx>
		<posy>179</posy>
	</coordinates>
	<include>dialogeffect</include>
	<controls>
		<control type="image">
			<description>background image</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>1200</width>
			<height>722</height>
			<texture border="40">dialogs/default/bg.png</texture>
		</control>
		<control type="label" id="2">
			<description>header label</description>
			<posx>30</posx>
			<posy>32</posy>
			<width>1140</width>
			<height>40</height>
			<font>font15_title</font>
			<label>$LOCALIZE[42090]</label>
			<align>center</align>
			<textcolor>dialogheader</textcolor>
		</control>
		<control type="image">
			<posx>32</posx>
			<posy>88</posy>
			<width>1136</width>
			<height>600</height>
			<texture border="5">dialogs/default/inner2.png</texture>
		</control>
		<control type="grouplist" id="90200">
			<description>control area</description>
			<posx>32</posx>
			<posy>88</posy>
			<width>1136</width>
			<height>600</height>
			<itemgap>0</itemgap>
			<itemgap>0</itemgap>
			<pagecontrol>6</pagecontrol>
			<onup>90200</onup>
			<ondown>90200</ondown>
			<onleft>noop</onleft>
			<onright>noop</onright>
			
			<!-- Default OSD Button -->
			<control type="button" id="90201">
                <posx>0</posx>
				<posy>0</posy>
				<height>75</height>
				<width>1136</width>
                <label>$LOCALIZE[42108]</label>
                <label2>[COLOR labelheader]$VAR[OSDDefaultButtonLabelVar][/COLOR]</label2>
                <onclick>$VAR[DefaultOSDButtonSetting]</onclick>
            </control>
			
			<!-- Poster Style -->
			<control type="button" id="90202">
                <posx>0</posx>
				<posy>0</posy>
				<height>75</height>
				<width>1136</width>
                <label>$LOCALIZE[42124]</label>
                <label2>[COLOR labelheader]$VAR[OSDVideoIconLabelVar][/COLOR]</label2>
                <onclick>$VAR[OSDVideoIconSettingVar]</onclick>
            </control>
			
			<!-- Spinning Disc -->
			<control type="button" id="90203">
                <posx>0</posx>
				<posy>0</posy>
				<height>75</height>
				<width>1136</width>
                <label>$LOCALIZE[42122]</label>
                <label2>[COLOR labelheader]$VAR[OSDSpinningDiscLabelVar][/COLOR]</label2>
                <onclick>$VAR[OSDSpinningDiscSettingVar]</onclick>
				<enable>!StringCompare(Skin.String(OSD.VideoIconStyle),Disabled)</enable>
            </control>
			
			<!-- Plot -->
			<control type="button" id="90204">
                <posx>0</posx>
				<posy>0</posy>
				<height>75</height>
				<width>1136</width>
                <label>$LOCALIZE[42131]</label>
                <label2>[COLOR labelheader]$VAR[OSDPlotLabelVar][/COLOR]</label2>
                <onclick>$VAR[OSDPlotSettingVar]</onclick>
            </control>
			
			<!-- Enable / Disable Media Flags -->
			<control type="radiobutton" id="90205">
                <posx>0</posx>
				<posy>0</posy>
				<height>75</height>
				<width>1136</width>
                <label>$LOCALIZE[42118]</label>
                <onclick>Skin.ToggleSetting(OSD.MediaFlags.Disable)</onclick>
				<selected>!Skin.HasSetting(OSD.MediaFlags.Disable)</selected>
            </control>
					
			<!-- Resolution Flag -->
			<control type="button" id="90206">
                <posx>0</posx>
				<posy>0</posy>
				<height>75</height>
				<width>1136</width>
                <label>$LOCALIZE[42119]</label> <!-- STRING: Resolution Flag Style -->
                <label2>[COLOR labelheader]$VAR[OSDResolutionFlagLabelVar][/COLOR]</label2>
                <onclick>Skin.ToggleSetting(OSD.FullResolutionFlag.Enable)</onclick>
				<enable>!Skin.HasSetting(OSD.MediaFlags.Disable)</enable>
            </control>
			
			<!-- Disable End Time -->
			<control type="radiobutton" id="90207">
                <posx>0</posx>
				<posy>0</posy>
				<height>75</height>
				<width>1136</width>
                <label>$LOCALIZE[42126]</label>
                <onclick>Skin.ToggleSetting(OSD.EndTime.Disable)</onclick>
				<selected>!Skin.HasSetting(OSD.EndTime.Disable)</selected>
            </control>
			
			<!-- Show Large Pause Symbol When Paused -->
			<control type="radiobutton" id="90208">
                <posx>0</posx>
				<posy>0</posy>
				<height>75</height>
				<width>1136</width>
                <label>$LOCALIZE[42117]</label>
                <onclick>Skin.ToggleSetting(OSD.PauseSymbol.Disable)</onclick>
				<selected>!Skin.HasSetting(OSD.PauseSymbol.Disable)</selected>
            </control>
			
			<!-- Hide Topbar when Paused -->
			<control type="button" id="90209">
                <posx>0</posx>
				<posy>0</posy>
				<height>75</height>
				<width>1136</width>
                <label>$LOCALIZE[42091]</label> <!-- STRING: Hide Topbar in OSD when Paused -->
                <label2>[COLOR labelheader]$VAR[OSDTopbarHideLabelVar][/COLOR]</label2>
                <onclick>Skin.ToggleSetting(OSD.TopBarHide.Enable)</onclick>
            </control>
			
			<!-- Hide Delay -->
            <control type="button" id="90210">
               <posx>0</posx>
				<posy>0</posy>
				<height>75</height>
				<width>1136</width>
                <label>$LOCALIZE[42095]</label> <!-- STRING: Hide Delay -->
                <label2>[COLOR labelheader]$VAR[OSDTopBarHideDelayLabelVar][/COLOR]</label2>
                <onclick>$VAR[OSDTopBarHideDelaySettingVar]</onclick>
				<enable>Skin.HasSetting(OSD.TopBarHide.Enable)</enable>
            </control>
			
			<!-- Reset -->
            <control type="button" id="90211">
               <posx>0</posx>
				<posy>0</posy>
				<height>75</height>
				<width>1136</width>
                <label>$LOCALIZE[42134]</label> <!-- STRING: Hide Delay -->
                <onclick>ActivateWindow(1116)</onclick>
				<enable>!IsEmpty(Skin.String(OSD.DefaultButton)) | !IsEmpty(Skin.String(OSD.VideoIconStyle)) | !IsEmpty(Skin.String(OSD.SpinningDiscStyle)) | !IsEmpty(Skin.String(OSD.Plot)) | Skin.HasSetting(OSD.MediaFlags.Disable) | Skin.HasSetting(OSD.FullResolutionFlag.Enable) | Skin.HasSetting(OSD.EndTime.Disable) | Skin.HasSetting(OSD.PauseSymbol.Disable) | Skin.HasSetting(OSD.TopBarHide.Enable) | !IsEmpty(Skin.String(OSD.TopBarHide.Delay))</enable>
            </control>
		</control>
		
		<!-- Scrollbar -->
		<control type="scrollbar" id="6">
			<posx>1166</posx>
			<posy>88</posy>
			<width>14</width>
			<height>600</height>
			<texturesliderbackground>-</texturesliderbackground>
			<texturesliderbar colordiffuse="55ffffff" border="1">scrollbar/texturesliderbar2.png</texturesliderbar>
			<texturesliderbarfocus border="1">scrollbar/texturesliderbar2.png</texturesliderbarfocus>
			<showonepage>false</showonepage>
			<orientation>vertical</orientation>
		</control>
		
	</controls>
</window>